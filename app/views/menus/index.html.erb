<div class="container-fluid menus-container">
<div class="row">
  <div class="col-3">
    <div class="card">
        <%= image_tag "coffee#{rand(3)}.gif", class: "card-img-top" %>  
      <div class="card-body">
        <h5 class="card-title"><%= current_user.company %></h5>
        <a href="/users/edit" class="card-link">Edit Profile</a>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
        <i class="fas fa-map"></i> <%= current_user.location %><br>
        <i class="fas fa-user-edit"></i> <%= current_user.bio %> <br> <br>
        <i class="fas fa-store"></i> <%= current_user.industry %> <br>
          </<br></li>
      </ul>
      <% if not @last_log.empty? %>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <br>
          <h5>Last Log</h5>
          <hr>
          <p><%= @last_log.first.description %></p>
          <br>
          <%= link_to 'View Menu Log', "/menus/#{@last_log.first.menu_id}/logs", class: "btn btn-success"%>
        </li>
      </ul>
    <% end %>
    </div>
  </div>
  <div class="col-8 find-my-menus">
    <div class="row">
      <div class="col-10 mb-3">
          <center>  <h3>Menus: <%= @menus.count %></h3></center>
      </div>
      <div class="col-2">
        <%= link_to "New Menu", new_menu_path, remote: true, class: "btn btn-secondary btn-sm" %>
      </div>
    </div>
    <% if @menus.blank? %>
      No Menu created.... Create one? <%= link_to "New Menu", new_menu_path %>
    <% else %>
    <table class="table table-striped">
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Status</td>
            <td>Last Updated</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% @menus.each do |menu| %>
          <%= render 'menu_row', menu: menu %>
          <% end %>
        </tbody>
       </table>
    <% end %>
  </div>
</div>
<hr>
</div>
