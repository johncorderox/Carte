<div class="row">
  <div class="col-4">
    <div class="card" >
      <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
      <div class="card-body">
        <h5 class="card-title">test</h5>
        <p class="card-text">test</p>

      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">View Tickets (<b>22</b>)</li>
        <li class="list-group-item" href>Closed Tickets (<b>102</b>)</li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link">dsfds</a>
      </div>
    </div>
  </div>
  <div class="col-8 find-my-menus">
    <h3>Menus: <%= @menus.count %></h3>
    <% if @menus.blank? %>
      No Menu created.... Create one? <%= link_to "New Menu", new_menu_path %>
    <% else %>
    <table class="table table-striped">
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Status</td>
            <td>Last Updated</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% @menus.each do |menu| %>
          <tr>
            <td><%= menu.id %></td>
            <td><%= menu.name %></td>
            <td><%= menu.status %></td>
            <td><%= menu.updated_at.strftime("%B %d %Y - %l:%M %p")  %></td>
            <td>
              <div class="btn-group" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Actions</i>
                </button>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                  <a class="dropdown-item" href="/menus/<%= menu.id %>"><i class="far fa-folder-open"></i> Open</a>
                  <a class="dropdown-item" data-method="delete" href="menus/<%= menu.id %>"><i class="fas fa-ban"></i> </i> Delete</a>
                </div>
              </div>
          </td>
          </tr>
          <% end %>
        </tbody>
       </table>
    <% end %>
  </div>
</div>
