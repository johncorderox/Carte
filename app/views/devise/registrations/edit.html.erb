<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="card">
      <div class="card-header">
        Settings
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Profile</li>
        <li class="list-group-item">Account Settings</li>
      </ul>
      </div>
    </div>
    <div class="col-1"></div>
    <div class="col-8">
      <h2>Carte Public Profile</h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "carte-input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, class: "mt-4" %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "carte-input" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "mt-4" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "carte-input" %>
        </div>

        <div class="field">
          <%= f.label :current_password, class: "mt-4" %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "carte-input" %>
        </div>

        <div class="field">
          <%= f.label :location, class: "mt-4" %> <br />
          <%= f.text_field :location, autocomplete: "location", class: "carte-input" %>
        </div>

        <div class="field">
          <%= f.label :company, class: "mt-4" %> <br />
          <%= f.text_field :company, autocomplete: "company", class: "carte-input" %>
        </div>

        <div class="field">
          <%= f.label :bio, class: "mt-4" %> <br />
          <%= f.text_area :bio, autocomplete: "bio", class: "carte-input" %>
        </div>

        <div class="field">
          <%= f.label :industry, class: "mt-4" %> <br />
          <%= f.text_field :industry, autocomplete: "industry", class: "carte-input" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-primary mt-5 mb-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
